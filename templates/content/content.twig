<article id="post-{{ post.id }}" class="{{ post.class }}">
  <header class="entry-header">
    {% if function('is_sticky') and function('is_home') and !function('is_paged') %}
      <span class="sticky-post">{{ __( 'Featured', 'post', 'twentynineteen' ) }}</span>
    {% endif %}

    {% if function('is_singular') %}
      <h1 class="entry-title">{{ post.title }}</h1>
    {% else %}
      <h2 class="entry-title"><a href="{{ post.link|esc_url }}" rel="bookmark">{{ post.title }}</a></h2>
    {% endif %}
  </header><!-- .entry-header -->

  {{ function('twentynineteen_post_thumbnail') }}

  <div class="entry-content">
    {{
      the_content(
        __( 'Continue reading<span class="screen-reader-text"> "%s"</span>', 'twentynineteen' )|format(post.title)
      )
    }}

    {{
      function('wp_link_pages', {
        'before'      : '<div class="page-links">' ~ __( 'Pages:', 'twentynineteen' ),
        'after'       : '</div>',
      })
    }}
  </div><!-- .entry-content -->

  <footer class="entry-footer">
    {{ function('twentynineteen_entry_footer') }}
  </footer><!-- .entry-footer -->
</article><!-- #post-${ID} -->
